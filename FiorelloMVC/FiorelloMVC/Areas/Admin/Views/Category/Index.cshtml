@model IEnumerable<CategoryProductVM>
@{
    ViewData["Title"] = "Index";
}
<div class="container mt-5">
    <h2 class="text-center">Categories</h2>
    <a asp-action="Create" class="btn btn-success">
        <i class="ti-plus"></i>
    </a>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>

                    <th>Category Name</th>
                    <th>Created Date</th>
                    <th>Product count</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr class="category-data" style="background-color:#bbb">

                        <td>@item.CategoryName</td>
                        <td>@item.CreatedDate</td>
                        <td>@item.ProductCount</td>
                        <td>

                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary text-white small">
                                <i class="ti-info"></i>
                            </a>

                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning text-white small">
                                <i class="ti-marker-alt"></i>
                            </a>
                            <form class="d-inline" method="post" asp-action="Delete" asp-route-id="@item.Id">

                                <button type="submit" class="btn btn-danger text-white small">
                                    <i class="ti-trash"></i>
                                </button>
                            </form>
                            <a data-id="@item.Id" class="btn btn-secondary text-white small add-archive">
                                <i class="ti-archive"></i>
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

@section js{
    <script src="~/js/archive.js"></script>
}

